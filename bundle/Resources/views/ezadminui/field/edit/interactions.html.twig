{% trans_default_domain 'ngremotemedia' %}

<div id="ngremotemedia-buttons-{{ field.id }}" class="ngremotemedia-buttons" data-id="{{ field.id }}" data-contentobject-id="{{ contentId }}" data-version="{{ version }}">

    {{ form_row(form.resource_id, { 'attr': {'class' : 'media-id', 'v-model': 'selectedImage.id'} }) }}
    {{ form_row(form.resource_url, { 'attr': {'class' : 'media-url'} }) }}
    {{ form_row(form.size, { 'attr': {'class' : 'media-size'} }) }}
    {{ form_row(form.media_type, { 'attr': {'class' : 'media-type'} }) }}
    {{ form_row(form.width, { 'attr': {'class' : 'media-width'} }) }}
    {{ form_row(form.height, { 'attr': {'class' : 'media-height'} }) }}

    {% if field_value.resourceId %}
        {% if type == 'image' %}
            {% if ngrm_is_croppable(content) %}
                <input type="button" @click="handleCropClicked" class="ngremotemedia-scale hid button" value="{{ 'ngremotemedia.field.edit.crop'|trans }}">
            {% endif %}
        {% endif %}

        <input type="button" @click="handleRemoveMediaClicked" class="ngremotemedia-remove-file button" value="{{ 'ngremotemedia.field.edit.remove_file'|trans }}"/>
    {% endif %}

    <input type="button" @click="handleBrowseMediaClicked" class="ngremotemedia-remote-file button" value="{{ 'ngremotemedia.field.edit.manage_media'|trans }}"/>

    <div class="ngremotemedia-local-file-container">
        <button type="button" class="btn btn-default ngremotemedia-local-file button upload-from-disk">
            <Label for="new_file">
                {{ 'ngremotemedia.field.edit.quick_upload'|trans }}
            </Label>
            <input hidden id="new_file" name="new_file" type="file" @change="handleFileInputChange">
        </button>
    </div>
</div>
