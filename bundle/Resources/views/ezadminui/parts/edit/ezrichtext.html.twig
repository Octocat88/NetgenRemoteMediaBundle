{% set has_richtext = false %}
{% for field in contentType.fieldDefinitions %}
    {% if field.fieldTypeIdentifier == 'ezrichtext' %}
        {% set has_richtext = true %}
    {% endif %}
{% endfor %}

{% if has_richtext %}
    {% include '@NetgenRemoteMedia/ezadminui/js_config.html.twig' %}

    {% include '@NetgenRemoteMedia/ezadminui/parts/edit/editor_insert.html.twig' with {
        'content_type_identifier': contentType.identifier,
        'field_id': 'ezrichtext'
    } %}
{% endif %}
